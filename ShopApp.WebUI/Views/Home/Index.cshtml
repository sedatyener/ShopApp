@*model List<ShopApp.Entities.Product>*@
@model ShopApp.WebUI.Models.ProductListModel

    <div class="row mt-3">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoryList")
        </div>
        <div class="col-md-9">
            <partial name="_slider" />
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <partial name="_product" for="@product" />
                }
            </div>
        </div>
    </div>


